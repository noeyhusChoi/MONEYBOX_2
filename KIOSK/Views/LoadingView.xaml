<UserControl x:Class="KIOSK.Views.LoadingView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:KIOSK.Views"
             xmlns:viewModels="clr-namespace:KIOSK.ViewModels"
             xmlns:gif="http://wpfanimatedgif.codeplex.com"
             mc:Ignorable="d"
             d:DataContext="{d:DesignInstance Type=viewModels:LoadingViewModel, IsDesignTimeCreatable=True}"
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid Background="#2222F0">
        <Image x:Name="GifViewer"
                HorizontalAlignment="Center"
               VerticalAlignment="Center"
               Margin="200,100,200,100"
               gif:ImageBehavior.AnimatedSource="{Binding GifSource}" />
    </Grid>
</UserControl>
