<UserControl
    x:Class="KIOSK.Views.ExchangeDepositView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:gif="http://wpfanimatedgif.codeplex.com"
    xmlns:local="clr-namespace:KIOSK.Views"
    xmlns:lx="clr-namespace:Localization"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="980"
    d:DesignWidth="1920"
    d:Language="en-US"
    mc:Ignorable="d">

    <Grid Background="{StaticResource SecondaryBrush}">
        <Grid.RowDefinitions>
            <RowDefinition Height="168" />
            <RowDefinition Height="36" />
            <RowDefinition Height="103" />
            <RowDefinition Height="22" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!--  상단 스테이터스  -->
        <Grid
            Grid.Row="0"
            Grid.Column="0"
            Margin="72,0,72,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*" />
                <ColumnDefinition Width="8*" />
                <ColumnDefinition Width="1*" />
            </Grid.ColumnDefinitions>

            <Button
                Grid.Column="0"
                Width="150"
                Height="70"
                Background="Transparent"
                BorderBrush="White"
                BorderThickness="1"
                Command="{Binding MainCommand}"
                FontFamily="{StaticResource Pretendard}"
                FontSize="{StaticResource FontSize_XS}"
                Foreground="White">
                <Button.Content>
                    <StackPanel
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Orientation="Horizontal">
                        <Image
                            Width="32"
                            Height="32"
                            Source="/Assets/Image/bx-home-smile.png" />
                        <TextBlock Margin="8,0,0,0" Text="HOME" />
                    </StackPanel>
                </Button.Content>
                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Border
                            Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            CornerRadius="10">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                        </Border>
                    </ControlTemplate>
                </Button.Template>
            </Button>

            <StackPanel
                Grid.Column="1"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Orientation="Horizontal">
                <StackPanel Margin="0,0,60,0" Orientation="Horizontal">
                    <Grid Margin="0,0,10,0">
                        <Ellipse
                            Width="40"
                            Height="40"
                            Fill="#A5A5A5"
                            Stroke="White"
                            StrokeThickness="1" />
                        <TextBlock
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            FontFamily="{StaticResource Pretendard}"
                            FontSize="32"
                            Foreground="White"
                            Text="1" />
                    </Grid>
                    <TextBlock
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        FontFamily="{StaticResource Pretendard}"
                        FontSize="32"
                        FontWeight="Bold"
                        Foreground="White"
                        Text="{lx:Loc ExchangeSellProcess.SelectCurrency}" />
                </StackPanel>
                <StackPanel Margin="0,0,60,0" Orientation="Horizontal">
                    <Grid Margin="0,0,10,0">
                        <Ellipse
                            Width="40"
                            Height="40"
                            Fill="#FF482F"
                            Stroke="White"
                            StrokeThickness="1" />
                        <TextBlock
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            FontFamily="{StaticResource Pretendard}"
                            FontSize="32"
                            Foreground="White"
                            Text="2" />
                    </Grid>
                    <TextBlock
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        FontFamily="{StaticResource Pretendard}"
                        FontSize="32"
                        FontWeight="Bold"
                        Foreground="White"
                        Text="{lx:Loc ExchangeSellProcess.IDScan}" />
                </StackPanel>
                <StackPanel Margin="0,0,60,0" Orientation="Horizontal">
                    <Grid Margin="0,0,10,0">
                        <Ellipse
                            Width="40"
                            Height="40"
                            Fill="#A5A5A5"
                            Stroke="White"
                            StrokeThickness="1" />
                        <TextBlock
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            FontFamily="{StaticResource Pretendard}"
                            FontSize="32"
                            Foreground="White"
                            Text="3" />
                    </Grid>
                    <TextBlock
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        FontFamily="{StaticResource Pretendard}"
                        FontSize="32"
                        FontWeight="Bold"
                        Foreground="White"
                        Text="{lx:Loc ExchangeSellProcess.Deposit}" />
                </StackPanel>
                <StackPanel Margin="0,0,60,0" Orientation="Horizontal">
                    <Grid Margin="0,0,10,0">
                        <Ellipse
                            Width="40"
                            Height="40"
                            Fill="#A5A5A5"
                            Stroke="White"
                            StrokeThickness="1" />
                        <TextBlock
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            FontFamily="{StaticResource Pretendard}"
                            FontSize="32"
                            Foreground="White"
                            Text="4" />
                    </Grid>
                    <TextBlock
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        FontFamily="{StaticResource Pretendard}"
                        FontSize="32"
                        FontWeight="Bold"
                        Foreground="White"
                        Text="{lx:Loc ExchangeSellProcess.Withdraw}" />
                </StackPanel>
            </StackPanel>
        </Grid>

        <!--  구분선  -->
        <Rectangle
            Height="0.6"
            Margin="72,0,72,0"
            HorizontalAlignment="Stretch"
            VerticalAlignment="Bottom"
            Stroke="#DCDEE0" />

        <!--  타이틀  -->
        <TextBlock
            Grid.Row="2"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            FontFamily="{StaticResource Pretendard}"
            FontSize="{StaticResource FontSize_XL}"
            FontWeight="{StaticResource FontWeight_S}"
            Foreground="White"
            Text="{lx:Loc ExchangeDeposit.Title}" />

        <Grid
            Grid.Row="4"
            Margin="80,0,80,0"
            VerticalAlignment="Top">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*" />
                <ColumnDefinition Width="54" />
                <ColumnDefinition Width="1*" />
            </Grid.ColumnDefinitions>

            <!--  좌측  -->
            <Border
                Grid.Column="0"
                Height="600"
                VerticalAlignment="Top"
                Background="White"
                CornerRadius="20">
                <StackPanel>
                    <!--  입금금액 박스 내부  -->
                    <Border
                        Height="200"
                        Margin="20"
                        VerticalAlignment="Top"
                        Background="{StaticResource SecondaryBrush}"
                        CornerRadius="20">

                        <StackPanel Margin="20">
                            <DockPanel Margin="10" LastChildFill="False">
                                <TextBlock
                                    VerticalAlignment="Center"
                                    DockPanel.Dock="Left"
                                    FontFamily="{StaticResource Pretendard}"
                                    FontSize="{StaticResource FontSize_S}"
                                    FontWeight="{StaticResource FontWeight_L}"
                                    Foreground="{StaticResource WhiteBrush}"
                                    Text="{lx:Loc ExchangeDeposit.Deposited}" />
                                <TextBlock
                                    VerticalAlignment="Center"
                                    DockPanel.Dock="Right"
                                    FontFamily="{StaticResource Pretendard}"
                                    FontSize="{StaticResource FontSize_S}"
                                    FontWeight="{StaticResource FontWeight_L}"
                                    Foreground="{StaticResource WhiteBrush}"
                                    Text="1 USD = 1234.99 KRW" />
                            </DockPanel>
                            <Separator Height="24" Background="Transparent" />
                            <StackPanel
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                Orientation="Horizontal">
                                <Image
                                    Width="60"
                                    Height="60"
                                    Source="/Assets/Flag/USD.png" />
                                <Separator Width="20" Background="Transparent" />
                                <TextBlock
                                    FontFamily="{StaticResource Pretendard}"
                                    FontSize="{StaticResource FontSize_2XL}"
                                    FontWeight="{StaticResource FontWeight_L}"
                                    Foreground="{StaticResource WhiteBrush}"
                                    Text="1,402.00" />
                                <Separator Width="10" Background="Transparent" />
                                <TextBlock
                                    VerticalAlignment="Center"
                                    FontFamily="{StaticResource Pretendard}"
                                    FontSize="{StaticResource FontSize_XL}"
                                    FontWeight="{StaticResource FontWeight_L}"
                                    Foreground="{StaticResource WhiteBrush}"
                                    Text="USD" />
                            </StackPanel>
                        </StackPanel>
                    </Border>

                    <!--  출금 금액  -->
                    <StackPanel Margin="20">
                        <StackPanel
                            Margin="20,0"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Center"
                            Orientation="Horizontal">
                            <Image
                                Width="60"
                                Height="60"
                                Source="/Assets/Image/Withdrawal.png" />
                            <Separator Width="10" Background="Transparent" />
                            <TextBlock
                                VerticalAlignment="Center"
                                FontFamily="{StaticResource Pretendard}"
                                FontSize="{StaticResource FontSize_S}"
                                FontWeight="{StaticResource FontWeight_L}"
                                Text="{lx:Loc ExchangeDeposit.Receive}" />
                        </StackPanel>
                        <Separator Height="10" Background="Transparent" />
                        <StackPanel HorizontalAlignment="Center" Orientation="Horizontal">
                            <TextBlock
                                Grid.Row="0"
                                Grid.Column="1"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                FontFamily="{StaticResource Pretendard}"
                                FontSize="{StaticResource FontSize_3XL}"
                                FontWeight="{StaticResource FontWeight_L}"
                                Text="1234.99" />
                            <Separator Width="10" Background="Transparent" />
                            <TextBlock
                                Grid.Row="0"
                                Grid.Column="1"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                FontFamily="{StaticResource Pretendard}"
                                FontSize="{StaticResource FontSize_XL}"
                                FontWeight="{StaticResource FontWeight_L}"
                                Text="KRW" />
                        </StackPanel>
                    </StackPanel>

                    <!--  한도 안내  -->
                    <StackPanel Margin="20,0" Orientation="Vertical">
                        <DockPanel Margin="10" LastChildFill="False">
                            <TextBlock
                                VerticalAlignment="Center"
                                DockPanel.Dock="Left"
                                FontFamily="{StaticResource Pretendard}"
                                FontSize="{StaticResource FontSize_XS}"
                                FontWeight="{StaticResource FontWeight_L}"
                                Opacity="0.7"
                                Text="{lx:Loc ExchangeDeposit.DailyLimit}" />
                            <TextBlock
                                VerticalAlignment="Center"
                                DockPanel.Dock="Right"
                                FontFamily="{StaticResource Pretendard}"
                                FontSize="{StaticResource FontSize_XS}"
                                FontWeight="{StaticResource FontWeight_L}"
                                Text="4,000 USD" />
                        </DockPanel>
                        <DockPanel Margin="10" LastChildFill="False">
                            <TextBlock
                                VerticalAlignment="Center"
                                DockPanel.Dock="Left"
                                FontFamily="{StaticResource Pretendard}"
                                FontSize="{StaticResource FontSize_XS}"
                                FontWeight="{StaticResource FontWeight_L}"
                                Opacity="0.7"
                                Text="{lx:Loc ExchangeDeposit.RemainDailyLimit}" />
                            <TextBlock
                                VerticalAlignment="Center"
                                DockPanel.Dock="Right"
                                FontFamily="{StaticResource Pretendard}"
                                FontSize="{StaticResource FontSize_XS}"
                                FontWeight="{StaticResource FontWeight_L}"
                                Text="4,000 USD" />
                        </DockPanel>
                        <DockPanel Margin="10" LastChildFill="False">
                            <TextBlock
                                VerticalAlignment="Center"
                                DockPanel.Dock="Left"
                                FontFamily="{StaticResource Pretendard}"
                                FontSize="{StaticResource FontSize_XS}"
                                FontWeight="{StaticResource FontWeight_L}"
                                Opacity="0.7"
                                Text="{lx:Loc ExchangeDeposit.PerTransactionLimit}" />
                            <TextBlock
                                VerticalAlignment="Center"
                                DockPanel.Dock="Right"
                                FontFamily="{StaticResource Pretendard}"
                                FontSize="{StaticResource FontSize_XS}"
                                FontWeight="{StaticResource FontWeight_L}"
                                Foreground="{StaticResource PrimaryBrush}"
                                Text="4,000 USD" />
                        </DockPanel>
                    </StackPanel>
                </StackPanel>
            </Border>

            <!--  우측  -->
            <StackPanel Grid.Column="2">
                <!--  상단 화폐 정보  -->
                <StackPanel VerticalAlignment="Top" Orientation="Horizontal">
                    <!--  설명  -->
                    <StackPanel
                        HorizontalAlignment="Left"
                        VerticalAlignment="Center"
                        Orientation="Horizontal">
                        <Image
                            Width="40"
                            Height="40"
                            Source="/Assets/Image/Info_normal.png" />
                        <Separator Width="10" Background="Transparent" />
                        <TextBlock
                            VerticalAlignment="Center"
                            FontFamily="{StaticResource Pretendard}"
                            FontSize="{StaticResource FontSize_S}"
                            FontWeight="{StaticResource FontWeight_L}"
                            Foreground="{StaticResource WhiteBrush}"
                            Text="{lx:Loc ExchangeDeposit.Denomination}" />
                    </StackPanel>
                    <Separator Width="10" Background="Transparent" />
                    <!--  화폐 이미지  -->
                    <ItemsControl ItemsSource="{Binding CurrencyNotes}">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <StackPanel
                                    Height="60"
                                    Margin="32,0"
                                    ClipToBounds="False"
                                    Orientation="Horizontal" />
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>

                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Grid ClipToBounds="False">
                                    <Border
                                        Margin="-32,0"
                                        Padding="0"
                                        HorizontalAlignment="Left"
                                        Background="Transparent">
                                        <Border.Effect>
                                            <DropShadowEffect
                                                BlurRadius="20"
                                                Direction="180"
                                                Opacity="0.6"
                                                ShadowDepth="8"
                                                Color="#80000000" />
                                        </Border.Effect>
                                        <Image
                                            Width="142"
                                            Height="60"
                                            Source="{Binding Image}"
                                            Stretch="Uniform" />
                                    </Border>
                                </Grid>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </StackPanel>
                <Separator Height="14" Background="Transparent" />
                <Border
                    Height="400"
                    Background="{StaticResource WhiteBrush}"
                    BorderBrush="Transparent"
                    BorderThickness="2"
                    CornerRadius="20">
                    <Image
                        Margin="12"
                        gif:ImageBehavior.AnimatedSource="{Binding GifPath}"
                        Stretch="Fill" />
                </Border>
                <Separator Height="18" Background="Transparent" />
                <Grid Height="100">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="3*" />
                        <ColumnDefinition Width="24" />
                        <ColumnDefinition Width="4*" />
                    </Grid.ColumnDefinitions>

                    <Button
                        Grid.Column="0"
                        Background="White"
                        BorderBrush="{StaticResource PrimaryBrush}"
                        Command="{Binding OpenTermsCommand}"
                        Content="{lx:Loc ExchangeDeposit.End}"
                        FontFamily="{StaticResource Pretendard}"
                        FontSize="{StaticResource FontSize_S}"
                        FontWeight="{StaticResource FontWeight_L}"
                        Foreground="{StaticResource PrimaryBrush}">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border
                                    Background="{TemplateBinding Background}"
                                    BorderBrush="{TemplateBinding BorderBrush}"
                                    BorderThickness="{TemplateBinding BorderThickness}"
                                    CornerRadius="10">
                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>

                    <Button
                        Grid.Column="2"
                        Background="{StaticResource PrimaryBrush}"
                        BorderBrush="{StaticResource PrimaryBrush}"
                        Command="{Binding OpenTermsCommand}"
                        Content="{lx:Loc Common.Next}"
                        FontFamily="{StaticResource Pretendard}"
                        FontSize="{StaticResource FontSize_S}"
                        FontWeight="{StaticResource FontWeight_L}"
                        Foreground="{StaticResource WhiteBrush}">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border
                                    Background="{TemplateBinding Background}"
                                    BorderBrush="{TemplateBinding BorderBrush}"
                                    BorderThickness="{TemplateBinding BorderThickness}"
                                    CornerRadius="10">
                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>
                </Grid>
            </StackPanel>
        </Grid>
    </Grid>
</UserControl>
