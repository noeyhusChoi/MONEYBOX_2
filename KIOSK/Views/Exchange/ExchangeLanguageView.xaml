<UserControl
    x:Class="KIOSK.Views.ExchangeLanguageView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:KIOSK.Views"
    xmlns:lx="clr-namespace:Localization"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewModels="clr-namespace:KIOSK.ViewModels"
    d:DesignHeight="980"
    d:DesignWidth="1920"
    mc:Ignorable="d">

    <UserControl.Resources>
        <!--  재사용 가능한 이미지 버튼 스타일  -->
        <Style x:Key="ImageButtonStyle" TargetType="Button">
            <!--  기본 속성: 테두리 없애기, 패딩 0  -->
            <Setter Property="Margin" Value="0" />
            <Setter Property="Padding" Value="0" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="Foreground" Value="White" />
            <Setter Property="Cursor" Value="Hand" />
            <Setter Property="Focusable" Value="True" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <!--  외부 Border: Background는 Button.Background로부터 온다  -->
                        <Border
                            x:Name="PART_Border"
                            Width="{TemplateBinding Width}"
                            Height="{TemplateBinding Height}"
                            Background="{TemplateBinding Background}"
                            CornerRadius="0"
                            Cursor="{TemplateBinding Cursor}"
                            SnapsToDevicePixels="True">
                            <!--  내용(문자열이면 내부적으로 TextBlock이 생성되어 Font 속성 상속)  -->
                            <ContentPresenter
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                Content="{TemplateBinding Content}"
                                ContentTemplate="{TemplateBinding ContentTemplate}"
                                RecognizesAccessKey="True" />
                        </Border>

                        <!--  간단한 시각적 트리거(Pressed 등)  -->
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="PART_Border" Property="Opacity" Value="0.85" />
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="PART_Border" Property="Opacity" Value="0.6" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>

    <Grid Background="Blue">
        <Grid.RowDefinitions>
            <RowDefinition Height="168" />
            <RowDefinition Height="64" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Grid
            Grid.Row="0"
            Grid.Column="0"
            Margin="72,0,72,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*" />
                <ColumnDefinition Width="8*" />
                <ColumnDefinition Width="1*" />
            </Grid.ColumnDefinitions>

            <Button
                Grid.Column="0"
                Width="150"
                Height="70"
                Background="Transparent"
                BorderBrush="White"
                BorderThickness="1"
                Command="{Binding MainCommand}"
                FontFamily="{StaticResource Pretendard}"
                FontSize="{StaticResource FontSize_XS}"
                Foreground="White">
                <Button.Content>
                    <StackPanel
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Orientation="Horizontal">
                        <Image
                            Width="32"
                            Height="32"
                            Source="/Assets/Image/bx-home-smile.png" />
                        <TextBlock Margin="8,0,0,0" Text="HOME" />
                    </StackPanel>
                </Button.Content>
                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Border
                            Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            CornerRadius="10">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                        </Border>
                    </ControlTemplate>
                </Button.Template>
            </Button>

            <Button
                Grid.Column="2"
                Width="150"
                Height="70"
                Background="Transparent"
                BorderBrush="White"
                BorderThickness="1"
                Command="{Binding PreviousCommand}"
                FontFamily="{StaticResource Pretendard}"
                FontSize="{StaticResource FontSize_XS}"
                Foreground="White">
                <Button.Content>
                    <StackPanel
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Orientation="Horizontal">
                        <Image
                            Width="32"
                            Height="32"
                            Source="/Assets/Image/bx-up-arrow-alt.png" />
                        <TextBlock Margin="8,0,0,0" Text="BACK" />
                    </StackPanel>
                </Button.Content>
                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Border
                            Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            CornerRadius="10">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                        </Border>
                    </ControlTemplate>
                </Button.Template>
            </Button>
        </Grid>

        <Rectangle
            Height="0.6"
            Margin="72,0,72,0"
            HorizontalAlignment="Stretch"
            VerticalAlignment="Bottom"
            Stroke="#DCDEE0" />

        <StackPanel
            Grid.Row="2"
            HorizontalAlignment="Center"
            VerticalAlignment="Bottom">
            <TextBlock
                Margin="0,0,0,14"
                FontFamily="{StaticResource Pretendard}"
                FontSize="40"
                FontWeight="Bold"
                Foreground="White"
                Text="Select your language to begin" />
            <TextBlock
                Margin="0,0,0,14"
                FontFamily="{StaticResource Pretendard}"
                FontSize="40"
                FontWeight="Bold"
                Foreground="White"
                Text="언어를 선택하시고 환전을 시작해 보세요" />
            <StackPanel
                Width="1680"
                Height="160"
                Margin="0,0,0,100"
                Orientation="Horizontal">
                <StackPanel.Background>
                    <ImageBrush ImageSource="pack://application:,,,/Assets/Image/Frame.png" Stretch="Fill" />
                </StackPanel.Background>

                <Button
                    Width="300"
                    Height="112"
                    Margin="30,0,0,0"
                    Command="{Binding NextCommand}"
                    CommandParameter="{Binding Tag, RelativeSource={RelativeSource Self}}"
                    Content="English"
                    FontFamily="{StaticResource Pretendard}"
                    FontSize="40"
                    FontWeight="Normal"
                    Foreground="White"
                    Style="{StaticResource ImageButtonStyle}"
                    Tag="1">
                    <Button.Background>
                        <ImageBrush ImageSource="pack://application:,,,/Assets/Image/Light.png" Stretch="UniformToFill" />
                    </Button.Background>
                </Button>

                <Button
                    Width="300"
                    Height="112"
                    Margin="30,0,0,0"
                    Command="{Binding NextCommand}"
                    CommandParameter="{Binding Tag, RelativeSource={RelativeSource Self}}"
                    Content="中文(简体)"
                    FontFamily="{StaticResource Pretendard}"
                    FontSize="40"
                    FontWeight="Normal"
                    Foreground="White"
                    Style="{StaticResource ImageButtonStyle}"
                    Tag="2">
                    <Button.Background>
                        <ImageBrush ImageSource="pack://application:,,,/Assets/Image/Light.png" Stretch="UniformToFill" />
                    </Button.Background>
                </Button>
                <Button
                    Width="300"
                    Height="112"
                    Margin="30,0,0,0"
                    Command="{Binding NextCommand}"
                    CommandParameter="{Binding Tag, RelativeSource={RelativeSource Self}}"
                    Content="中文(繁体)"
                    FontFamily="{StaticResource Pretendard}"
                    FontSize="40"
                    FontWeight="Normal"
                    Foreground="White"
                    Style="{StaticResource ImageButtonStyle}"
                    Tag="3">
                    <Button.Background>
                        <ImageBrush ImageSource="pack://application:,,,/Assets/Image/Light.png" Stretch="UniformToFill" />
                    </Button.Background>
                </Button>
                <Button
                    Width="300"
                    Height="112"
                    Margin="30,0,0,0"
                    Command="{Binding NextCommand}"
                    CommandParameter="{Binding Tag, RelativeSource={RelativeSource Self}}"
                    Content="日本語"
                    FontFamily="{StaticResource Pretendard}"
                    FontSize="40"
                    FontWeight="Normal"
                    Foreground="White"
                    Style="{StaticResource ImageButtonStyle}"
                    Tag="4">
                    <Button.Background>
                        <ImageBrush ImageSource="pack://application:,,,/Assets/Image/Light.png" Stretch="UniformToFill" />
                    </Button.Background>
                </Button>
                <Button
                    Width="300"
                    Height="112"
                    Margin="30,0,0,0"
                    Command="{Binding NextCommand}"
                    CommandParameter="{Binding Tag, RelativeSource={RelativeSource Self}}"
                    Content="한국어"
                    FontFamily="{StaticResource Pretendard}"
                    FontSize="40"
                    FontWeight="Normal"
                    Foreground="White"
                    Style="{StaticResource ImageButtonStyle}"
                    Tag="5">
                    <Button.Background>
                        <ImageBrush ImageSource="pack://application:,,,/Assets/Image/Light.png" Stretch="UniformToFill" />
                    </Button.Background>
                </Button>
            </StackPanel>
        </StackPanel>
    </Grid>
</UserControl>