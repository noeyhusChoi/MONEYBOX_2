<UserControl
    x:Class="KIOSK.Views.ExchangeTermsView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:KIOSK.Views"
    xmlns:lx="clr-namespace:Localization"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewModels="clr-namespace:KIOSK.ViewModels"
    d:DataContext="{d:DesignInstance Type=viewModels:ExchangeTermsViewModel,
                                     IsDesignTimeCreatable=True}"
    d:DesignHeight="980"
    d:DesignWidth="1920"
    mc:Ignorable="d">

    <UserControl.Resources>
        <Style x:Key="IconTextRoundedButton" TargetType="Button">
            <Setter Property="Padding" Value="12,8" />
            <Setter Property="HorizontalContentAlignment" Value="Center" />
            <Setter Property="VerticalContentAlignment" Value="Center" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border
                            Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            CornerRadius="15">
                            <Grid Margin="{TemplateBinding Padding}">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="8" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>

                                <!--  아이콘  -->
                                <Image
                                    Grid.Column="0"
                                    Width="32"
                                    Height="32"
                                    Source="{Binding Tag, RelativeSource={RelativeSource TemplatedParent}}" />

                                <!--  텍스트  -->
                                <ContentPresenter
                                    Grid.Column="2"
                                    HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                    VerticalAlignment="{TemplateBinding VerticalContentAlignment}" />
                            </Grid>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <Style x:Key="IconTextRoundedButton2" TargetType="Button">
            <Setter Property="Padding" Value="12,8" />
            <Setter Property="HorizontalContentAlignment" Value="Center" />
            <Setter Property="VerticalContentAlignment" Value="Center" />
            <!-- 툴팁을 데이터로 쓰지 않게 하려면 ↓ 주석 해제
<Setter Property="ToolTipService.IsEnabled" Value="False"/>
            -->
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border
                            Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            CornerRadius="15">
                            <Grid
                                Margin="{TemplateBinding Padding}"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Center">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="12" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>
                                <Ellipse
                                    Width="64"
                                    Height="64"
                                    RenderOptions.BitmapScalingMode="HighQuality"
                                    SnapsToDevicePixels="True"
                                    Stroke="#1A000000"
                                    StrokeThickness="1">
                                    <Ellipse.Fill>
                                        <ImageBrush ImageSource="{Binding FlagUri}" Stretch="UniformToFill" />
                                    </Ellipse.Fill>
                                </Ellipse>

                                <!--  오른쪽 2줄 텍스트  -->
                                <StackPanel Grid.Column="2" VerticalAlignment="Center">
                                    <TextBlock
                                        FontSize="24"
                                        FontWeight="Medium"
                                        Foreground="Gray"
                                        Text="{Binding Currency}" />

                                    <TextBlock
                                        FontFamily="{StaticResource Pretendard}"
                                        FontSize="34"
                                        FontWeight="Bold"
                                        Foreground="Black"
                                        Text="{Binding Buy, StringFormat={}{0:F2}}" />
                                </StackPanel>
                            </Grid>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <DataTrigger Binding="{Binding Currency}" Value="USD">
                    <Setter Property="IsEnabled" Value="False" />
                    <Setter Property="Opacity" Value="0.6" />
                </DataTrigger>
            </Style.Triggers>
        </Style>
        <!--  ResourceDictionary 또는 Window.Resources 안에 넣으세요  -->
        <Style x:Key="EllipseToggleStyle" TargetType="ToggleButton">
            <Setter Property="Width" Value="32" />
            <Setter Property="Height" Value="32" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ToggleButton">
                        <Grid>
                            <!--  Fill에 이름 있는 SolidColorBrush를 사용해야 Storyboard에서 Color를 조작할 수 있습니다  -->
                            <Ellipse
                                x:Name="PART_Ellipse"
                                Width="{TemplateBinding Width}"
                                Height="{TemplateBinding Height}">
                                <Ellipse.Fill>
                                    <SolidColorBrush x:Name="EllipseBrush" Color="#FFBDBDBD" />
                                    <!--  초기 색  -->
                                </Ellipse.Fill>
                            </Ellipse>
                        </Grid>

                        <ControlTemplate.Triggers>
                            <!--  체크 되었을 때: 부드러운 색 변화  -->
                            <Trigger Property="IsChecked" Value="True">
                                <Trigger.EnterActions>
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <ColorAnimation
                                                Storyboard.TargetName="EllipseBrush"
                                                Storyboard.TargetProperty="Color"
                                                To="#FF4CAF50"
                                                Duration="0:0:0.18" />
                                        </Storyboard>
                                    </BeginStoryboard>
                                </Trigger.EnterActions>
                                <Trigger.ExitActions>
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <ColorAnimation
                                                Storyboard.TargetName="EllipseBrush"
                                                Storyboard.TargetProperty="Color"
                                                To="#FFBDBDBD"
                                                Duration="0:0:0.12" />
                                        </Storyboard>
                                    </BeginStoryboard>
                                </Trigger.ExitActions>
                            </Trigger>

                            <!--  비활성화 상태  -->
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="PART_Ellipse" Property="Opacity" Value="0.5" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <!--  (1) ToggleButton 스타일: Ellipse 색을 토글할 때 애니메이션  -->
        <Style x:Key="EllipseToggleStyle2" TargetType="ToggleButton">
            <Setter Property="Width" Value="44" />
            <Setter Property="Height" Value="44" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ToggleButton">
                        <Grid>
                            <!--  Ellipse: Fill은 이름 있는 SolidColorBrush로  -->
                            <Ellipse
                                x:Name="PART_Ellipse"
                                Width="{TemplateBinding Width}"
                                Height="{TemplateBinding Height}">
                                <Ellipse.Fill>
                                    <SolidColorBrush x:Name="EllipseBrush" Color="#FFDDDDDD" />
                                </Ellipse.Fill>
                            </Ellipse>

                            <!--  체크 마크: Stroke에 이름있는 SolidColorBrush 사용  -->
                            <Path
                                x:Name="TickPath"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                Data="M0,12 L12,20 L24,2"
                                Opacity="0"
                                Stretch="None"
                                StrokeDashArray="40 40"
                                StrokeDashOffset="40"
                                StrokeEndLineCap="Round"
                                StrokeLineJoin="Round"
                                StrokeStartLineCap="Round"
                                StrokeThickness="3.6">
                                <Path.Stroke>
                                    <SolidColorBrush x:Name="TickBrush" Color="#FF333333" />
                                </Path.Stroke>
                            </Path>
                        </Grid>

                        <ControlTemplate.Triggers>
                            <!--  체크 되었을 때: 엘립스 색 및 체크마크 애니메이션  -->
                            <Trigger Property="IsChecked" Value="True">
                                <Trigger.EnterActions>
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <!--  원 컬러 -> 진한 색  -->
                                            <ColorAnimation
                                                Storyboard.TargetName="EllipseBrush"
                                                Storyboard.TargetProperty="(SolidColorBrush.Color)"
                                                To="#FF482F"
                                                Duration="0:0:0.18" />

                                            <!--  체크 마크 색 -> 흰색(가시성 확보)  -->
                                            <ColorAnimation
                                                BeginTime="0:0:0.05"
                                                Storyboard.TargetName="TickBrush"
                                                Storyboard.TargetProperty="(SolidColorBrush.Color)"
                                                To="#FFFFFFFF"
                                                Duration="0:0:0.18" />

                                            <!--  스트로크 드로잉(StrokeDashOffset)  -->
                                            <DoubleAnimation
                                                BeginTime="0:0:0.05"
                                                Storyboard.TargetName="TickPath"
                                                Storyboard.TargetProperty="StrokeDashOffset"
                                                From="60"
                                                To="0"
                                                Duration="0:0:0.22" />

                                            <!--  불투명도 페이드인 (안전장치)  -->
                                            <DoubleAnimation
                                                BeginTime="0:0:0.05"
                                                Storyboard.TargetName="TickPath"
                                                Storyboard.TargetProperty="Opacity"
                                                From="0"
                                                To="1"
                                                Duration="0:0:0.08" />
                                        </Storyboard>
                                    </BeginStoryboard>
                                </Trigger.EnterActions>

                                <Trigger.ExitActions>
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <!--  체크 해제 시 역애니메이션  -->
                                            <ColorAnimation
                                                Storyboard.TargetName="EllipseBrush"
                                                Storyboard.TargetProperty="(SolidColorBrush.Color)"
                                                To="#FFDDDDDD"
                                                Duration="0:0:0.12" />

                                            <ColorAnimation
                                                Storyboard.TargetName="TickBrush"
                                                Storyboard.TargetProperty="(SolidColorBrush.Color)"
                                                To="#FF333333"
                                                Duration="0:0:0.08" />

                                            <DoubleAnimation
                                                Storyboard.TargetName="TickPath"
                                                Storyboard.TargetProperty="StrokeDashOffset"
                                                From="0"
                                                To="60"
                                                Duration="0:0:0.14" />

                                            <DoubleAnimation
                                                Storyboard.TargetName="TickPath"
                                                Storyboard.TargetProperty="Opacity"
                                                From="1"
                                                To="0"
                                                Duration="0:0:0.10" />
                                        </Storyboard>
                                    </BeginStoryboard>
                                </Trigger.ExitActions>
                            </Trigger>

                            <!--  비활성화 상태  -->
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="PART_Ellipse" Property="Opacity" Value="0.5" />
                                <Setter TargetName="TickPath" Property="Opacity" Value="0.3" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>


    </UserControl.Resources>

    <Grid Background="#2222F0">
        <Grid.RowDefinitions>
            <RowDefinition Height="168" />
            <RowDefinition Height="64" />
            <RowDefinition Height="103" />
            <RowDefinition Height="48" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!--  상단 스테이터스  -->
        <Grid
            Grid.Row="0"
            Grid.Column="0"
            Margin="72,0,72,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*" />
                <ColumnDefinition Width="8*" />
                <ColumnDefinition Width="1*" />
            </Grid.ColumnDefinitions>

            <Button
                Grid.Column="0"
                Width="150"
                Height="70"
                Background="Transparent"
                BorderBrush="White"
                BorderThickness="1"
                Command="{Binding MainCommand}"
                FontFamily="{StaticResource Pretendard}"
                FontSize="{StaticResource FontSize_XS}"
                Foreground="White">
                <Button.Content>
                    <StackPanel
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Orientation="Horizontal">
                        <Image
                            Width="32"
                            Height="32"
                            Source="/Assets/Image/bx-home-smile.png" />
                        <TextBlock Margin="8,0,0,0" Text="HOME" />
                    </StackPanel>
                </Button.Content>
                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Border
                            Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            CornerRadius="10">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                        </Border>
                    </ControlTemplate>
                </Button.Template>
            </Button>

            <Button
                Grid.Column="2"
                Width="150"
                Height="70"
                Background="Transparent"
                BorderBrush="White"
                BorderThickness="1"
                Command="{Binding PreviousCommand}"
                FontFamily="{StaticResource Pretendard}"
                FontSize="{StaticResource FontSize_XS}"
                Foreground="White">
                <Button.Content>
                    <StackPanel
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Orientation="Horizontal">
                        <Image
                            Width="32"
                            Height="32"
                            Source="/Assets/Image/bx-up-arrow-alt.png" />
                        <TextBlock Margin="8,0,0,0" Text="BACK" />
                    </StackPanel>
                </Button.Content>
                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Border
                            Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            CornerRadius="10">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                        </Border>
                    </ControlTemplate>
                </Button.Template>
            </Button>

            <StackPanel
                Grid.Column="1"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Orientation="Horizontal">
                <StackPanel Margin="0,0,60,0" Orientation="Horizontal">
                    <Grid Margin="0,0,10,0">
                        <Ellipse
                            Width="40"
                            Height="40"
                            Fill="#A5A5A5"
                            Stroke="White"
                            StrokeThickness="1" />
                        <TextBlock
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            FontFamily="{StaticResource Pretendard}"
                            FontSize="32"
                            Foreground="White"
                            Text="1" />
                    </Grid>
                    <TextBlock
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        FontFamily="{StaticResource Pretendard}"
                        FontSize="32"
                        FontWeight="Bold"
                        Foreground="White"
                        Text="{lx:Loc ExchangeProcess.SelectCurrency}" />
                </StackPanel>
                <StackPanel Margin="0,0,60,0" Orientation="Horizontal">
                    <Grid Margin="0,0,10,0">
                        <Ellipse
                            Width="40"
                            Height="40"
                            Fill="#FF482F"
                            Stroke="White"
                            StrokeThickness="1" />
                        <TextBlock
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            FontFamily="{StaticResource Pretendard}"
                            FontSize="32"
                            Foreground="White"
                            Text="2" />
                    </Grid>
                    <TextBlock
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        FontFamily="{StaticResource Pretendard}"
                        FontSize="32"
                        FontWeight="Bold"
                        Foreground="White"
                        Text="{lx:Loc ExchangeProcess.IDScan}" />
                </StackPanel>
                <StackPanel Margin="0,0,60,0" Orientation="Horizontal">
                    <Grid Margin="0,0,10,0">
                        <Ellipse
                            Width="40"
                            Height="40"
                            Fill="#A5A5A5"
                            Stroke="White"
                            StrokeThickness="1" />
                        <TextBlock
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            FontFamily="{StaticResource Pretendard}"
                            FontSize="32"
                            Foreground="White"
                            Text="3" />
                    </Grid>
                    <TextBlock
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        FontFamily="{StaticResource Pretendard}"
                        FontSize="32"
                        FontWeight="Bold"
                        Foreground="White"
                        Text="{lx:Loc ExchangeProcess.SetAmount}" />
                </StackPanel>
                <StackPanel Margin="0,0,60,0" Orientation="Horizontal">
                    <Grid Margin="0,0,10,0">
                        <Ellipse
                            Width="40"
                            Height="40"
                            Fill="#A5A5A5"
                            Stroke="White"
                            StrokeThickness="1" />
                        <TextBlock
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            FontFamily="{StaticResource Pretendard}"
                            FontSize="32"
                            Foreground="White"
                            Text="4" />
                    </Grid>
                    <TextBlock
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        FontFamily="{StaticResource Pretendard}"
                        FontSize="32"
                        FontWeight="Bold"
                        Foreground="White"
                        Text="{lx:Loc ExchangeProcess.Withdraw}" />
                </StackPanel>
            </StackPanel>
        </Grid>

        <!--  구분선  -->
        <Rectangle
            Height="0.6"
            Margin="72,0,72,0"
            HorizontalAlignment="Stretch"
            VerticalAlignment="Bottom"
            Stroke="#DCDEE0" />

        <!--  타이틀  -->
        <TextBlock
            Grid.Row="2"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            FontFamily="{StaticResource Pretendard}"
            FontSize="{StaticResource FontSize_XL}"
            FontWeight="{StaticResource FontWeight_S}"
            Foreground="White"
            Text="{lx:Loc ExchangeTerms.Title}" />

        <!--  내용  -->
        <StackPanel
            Grid.Row="4"
            HorizontalAlignment="Center"
            VerticalAlignment="Top"
            Orientation="Horizontal">

            <!--  약관 이미지  -->
            <Border
                Width="1300"
                Height="530"
                VerticalAlignment="Top"
                Background="White"
                CornerRadius="20">
                <StackPanel VerticalAlignment="Center">
                    <Image
                        Width="800"
                        Height="380"
                        Source="/Assets/Image/identification.png" />
                    <StackPanel
                        Margin="0,50,0,0"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Orientation="Horizontal">
                        <Image
                            Width="32"
                            Height="32"
                            Source="/Assets/Image/Info.png" />
                        <TextBlock
                            Margin="16,0,0,0"
                            HorizontalAlignment="Center"
                            FontFamily="{StaticResource Pretendard}"
                            FontSize="{StaticResource FontSize_XS}"
                            Text="{lx:Loc ExchangeTerms.Info}" />
                    </StackPanel>
                </StackPanel>
            </Border>

            <!--  우측 약관 동의 영역  -->
            <StackPanel Margin="48,0,0,0" VerticalAlignment="Bottom">
                <Button
                    Width="430"
                    Height="100"
                    Background="White"
                    Command="{Binding OpenTermsCommand}"
                    Content="{lx:Loc ExchangeTerms.Detail}"
                    FontFamily="{StaticResource Pretendard}"
                    FontSize="{StaticResource FontSize_S}">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="10">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                            </Border>
                        </ControlTemplate>
                    </Button.Template>
                </Button>

                <Border
                    Width="430"
                    Height="130"
                    Margin="0,24,0,0"
                    Background="{StaticResource WhiteBrush}"
                    BorderBrush="{StaticResource PrimaryBrush}"
                    BorderThickness="2"
                    CornerRadius="10">
                    <StackPanel
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Orientation="Horizontal">
                        <ToggleButton x:Name="AgreeToggle" Style="{StaticResource EllipseToggleStyle2}" />
                        <Separator Width="16" Background="Transparent" />
                        <TextBlock
                            Width="294"
                            FontFamily="{StaticResource Pretendard}"
                            FontSize="{StaticResource FontSize_L}"
                            FontWeight="{StaticResource FontWeight_L}"
                            Foreground="{StaticResource PrimaryBrush}"
                            Text="{lx:Loc ExchangeTerms.Agreement}"
                            TextWrapping="Wrap" />
                    </StackPanel>
                </Border>
                <Button
                    Width="430"
                    Height="100"
                    Margin="0,24,0,0"
                    Command="{Binding NextCommand}"
                    Content="다음"
                    FontFamily="{StaticResource Pretendard}"
                    FontSize="{StaticResource FontSize_S}">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Background" Value="#FFBDBDBD" />
                            <Setter Property="BorderBrush" Value="{x:Null}" />
                            <Setter Property="Foreground" Value="White" />
                            <Setter Property="IsEnabled" Value="False" />
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding IsChecked, ElementName=AgreeToggle}" Value="True">
                                    <Setter Property="Background" Value="#FF482F" />
                                    <Setter Property="BorderBrush" Value="#FF482F" />
                                    <Setter Property="IsEnabled" Value="True" />
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="10">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                            </Border>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
            </StackPanel>
        </StackPanel>

    </Grid>
</UserControl>
