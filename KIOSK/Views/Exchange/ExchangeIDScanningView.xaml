<UserControl
    x:Class="KIOSK.Views.ExchangeIDScanningView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:gif="http://wpfanimatedgif.codeplex.com"
    xmlns:local="clr-namespace:KIOSK.Views"
    xmlns:lx="clr-namespace:Localization"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="980"
    d:DesignWidth="1920"
    mc:Ignorable="d">

    <Grid Background="#2222F0">
        <Grid.RowDefinitions>
            <RowDefinition Height="168" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!--  상단 스테이터스  -->
        <StackPanel
            Grid.Column="1"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Orientation="Horizontal">
            <StackPanel Margin="0,0,60,0" Orientation="Horizontal">
                <Grid Margin="0,0,10,0">
                    <Ellipse
                        Width="40"
                        Height="40"
                        Fill="#A5A5A5"
                        Stroke="White"
                        StrokeThickness="1" />
                    <TextBlock
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        FontFamily="{StaticResource Pretendard}"
                        FontSize="32"
                        Foreground="White"
                        Text="1" />
                </Grid>
                <TextBlock
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    FontFamily="{StaticResource Pretendard}"
                    FontSize="32"
                    FontWeight="Bold"
                    Foreground="White"
                    Text="{lx:Loc ExchangeSellProcess.SelectCurrency}" />
            </StackPanel>
            <StackPanel Margin="0,0,60,0" Orientation="Horizontal">
                <Grid Margin="0,0,10,0">
                    <Ellipse
                        Width="40"
                        Height="40"
                        Fill="#FF482F"
                        Stroke="White"
                        StrokeThickness="1" />
                    <TextBlock
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        FontFamily="{StaticResource Pretendard}"
                        FontSize="32"
                        Foreground="White"
                        Text="2" />
                </Grid>
                <TextBlock
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    FontFamily="{StaticResource Pretendard}"
                    FontSize="32"
                    FontWeight="Bold"
                    Foreground="White"
                    Text="{lx:Loc ExchangeSellProcess.IDScan}" />
            </StackPanel>
            <StackPanel Margin="0,0,60,0" Orientation="Horizontal">
                <Grid Margin="0,0,10,0">
                    <Ellipse
                        Width="40"
                        Height="40"
                        Fill="#A5A5A5"
                        Stroke="White"
                        StrokeThickness="1" />
                    <TextBlock
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        FontFamily="{StaticResource Pretendard}"
                        FontSize="32"
                        Foreground="White"
                        Text="3" />
                </Grid>
                <TextBlock
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    FontFamily="{StaticResource Pretendard}"
                    FontSize="32"
                    FontWeight="Bold"
                    Foreground="White"
                    Text="{lx:Loc ExchangeSellProcess.Deposit}" />
            </StackPanel>
            <StackPanel Margin="0,0,60,0" Orientation="Horizontal">
                <Grid Margin="0,0,10,0">
                    <Ellipse
                        Width="40"
                        Height="40"
                        Fill="#A5A5A5"
                        Stroke="White"
                        StrokeThickness="1" />
                    <TextBlock
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        FontFamily="{StaticResource Pretendard}"
                        FontSize="32"
                        Foreground="White"
                        Text="4" />
                </Grid>
                <TextBlock
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    FontFamily="{StaticResource Pretendard}"
                    FontSize="32"
                    FontWeight="Bold"
                    Foreground="White"
                    Text="{lx:Loc ExchangeSellProcess.Withdraw}" />
            </StackPanel>
        </StackPanel>

        <!--  구분선  -->
        <Rectangle
            Height="0.6"
            Margin="72,0,72,0"
            HorizontalAlignment="Stretch"
            VerticalAlignment="Bottom"
            Stroke="#DCDEE0" />

        <StackPanel Grid.Row="2 " VerticalAlignment="Center">
            <Image
                x:Name="GifViewer"
                Width="600"
                Height="440"
                gif:ImageBehavior.AnimatedSource="{Binding GifPath}" />
            <Separator Height="40" Background="Transparent" />
            <StackPanel HorizontalAlignment="Center" Orientation="Horizontal">
                <Image
                    Width="40"
                    Height="40"
                    Source="/Assets/Image/Info.png" />
                <Separator Width="20" Background="Transparent" />
                <TextBlock
                    FontFamily="{StaticResource Pretendard}"
                    FontSize="{StaticResource FontSize_L}"
                    FontWeight="{StaticResource FontWeight_M}"
                    Foreground="{StaticResource WhiteBrush}"
                    Text="{lx:Loc Scanning.Info}" />
            </StackPanel>
        </StackPanel>
    </Grid>
</UserControl>
