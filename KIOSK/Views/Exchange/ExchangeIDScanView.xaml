<UserControl
    x:Class="KIOSK.Views.ExchangeIDScanView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
    xmlns:local="clr-namespace:KIOSK.Views"
    xmlns:lx="clr-namespace:Localization"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewModels="clr-namespace:KIOSK.ViewModels"
    d:DataContext="{d:DesignInstance Type=viewModels:ExchangeIDScanViewModel,
                                     IsDesignTimeCreatable=False}"
    d:DesignHeight="980"
    d:DesignWidth="1920"
    d:Language="ko-KR"
    mc:Ignorable="d">
    <!--  로드 이벤트  -->
    <i:Interaction.Triggers>
        <i:EventTrigger EventName="Loaded">
            <i:InvokeCommandAction Command="{Binding LoadedCommand}" CommandParameter="{Binding RelativeSource={RelativeSource Self}}" />
        </i:EventTrigger>
    </i:Interaction.Triggers>

    <Grid Background="#2222F0">
        <Grid.RowDefinitions>
            <RowDefinition Height="168" />
            <RowDefinition Height="36" />
            <RowDefinition Height="103" />
            <RowDefinition Height="26" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!--  상단 스테이터스  -->
        <Grid
            Grid.Row="0"
            Grid.Column="0"
            Margin="72,0,72,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*" />
                <ColumnDefinition Width="8*" />
                <ColumnDefinition Width="1*" />
            </Grid.ColumnDefinitions>

            <Button
                Grid.Column="0"
                Width="150"
                Height="70"
                Background="Transparent"
                BorderBrush="White"
                BorderThickness="1"
                Command="{Binding MainCommand}"
                FontFamily="{StaticResource Pretendard}"
                FontSize="{StaticResource FontSize_XS}"
                Foreground="White">
                <Button.Content>
                    <StackPanel
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Orientation="Horizontal">
                        <Image
                            Width="32"
                            Height="32"
                            Source="/Assets/Image/bx-home-smile.png" />
                        <TextBlock Margin="8,0,0,0" Text="HOME" />
                    </StackPanel>
                </Button.Content>
                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Border
                            Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            CornerRadius="10">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                        </Border>
                    </ControlTemplate>
                </Button.Template>
            </Button>

            <Button
                Grid.Column="2"
                Width="150"
                Height="70"
                Background="Transparent"
                BorderBrush="White"
                BorderThickness="1"
                Command="{Binding PreviousCommand}"
                FontFamily="{StaticResource Pretendard}"
                FontSize="{StaticResource FontSize_XS}"
                Foreground="White">
                <Button.Content>
                    <StackPanel
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Orientation="Horizontal">
                        <Image
                            Width="32"
                            Height="32"
                            Source="/Assets/Image/bx-up-arrow-alt.png" />
                        <TextBlock Margin="8,0,0,0" Text="BACK" />
                    </StackPanel>
                </Button.Content>
                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Border
                            Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            CornerRadius="10">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                        </Border>
                    </ControlTemplate>
                </Button.Template>
            </Button>

            <StackPanel
                Grid.Column="1"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Orientation="Horizontal">
                <StackPanel Margin="0,0,60,0" Orientation="Horizontal">
                    <Grid Margin="0,0,10,0">
                        <Ellipse
                            Width="40"
                            Height="40"
                            Fill="#A5A5A5"
                            Stroke="White"
                            StrokeThickness="1" />
                        <TextBlock
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            FontFamily="{StaticResource Pretendard}"
                            FontSize="32"
                            Foreground="White"
                            Text="1" />
                    </Grid>
                    <TextBlock
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        FontFamily="{StaticResource Pretendard}"
                        FontSize="32"
                        FontWeight="Bold"
                        Foreground="White"
                        Text="{lx:Loc ExchangeSellProcess.SelectCurrency}" />
                </StackPanel>
                <StackPanel Margin="0,0,60,0" Orientation="Horizontal">
                    <Grid Margin="0,0,10,0">
                        <Ellipse
                            Width="40"
                            Height="40"
                            Fill="#FF482F"
                            Stroke="White"
                            StrokeThickness="1" />
                        <TextBlock
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            FontFamily="{StaticResource Pretendard}"
                            FontSize="32"
                            Foreground="White"
                            Text="2" />
                    </Grid>
                    <TextBlock
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        FontFamily="{StaticResource Pretendard}"
                        FontSize="32"
                        FontWeight="Bold"
                        Foreground="White"
                        Text="{lx:Loc ExchangeSellProcess.IDScan}" />
                </StackPanel>
                <StackPanel Margin="0,0,60,0" Orientation="Horizontal">
                    <Grid Margin="0,0,10,0">
                        <Ellipse
                            Width="40"
                            Height="40"
                            Fill="#A5A5A5"
                            Stroke="White"
                            StrokeThickness="1" />
                        <TextBlock
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            FontFamily="{StaticResource Pretendard}"
                            FontSize="32"
                            Foreground="White"
                            Text="3" />
                    </Grid>
                    <TextBlock
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        FontFamily="{StaticResource Pretendard}"
                        FontSize="32"
                        FontWeight="Bold"
                        Foreground="White"
                        Text="{lx:Loc ExchangeSellProcess.Deposit}" />
                </StackPanel>
                <StackPanel Margin="0,0,60,0" Orientation="Horizontal">
                    <Grid Margin="0,0,10,0">
                        <Ellipse
                            Width="40"
                            Height="40"
                            Fill="#A5A5A5"
                            Stroke="White"
                            StrokeThickness="1" />
                        <TextBlock
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            FontFamily="{StaticResource Pretendard}"
                            FontSize="32"
                            Foreground="White"
                            Text="4" />
                    </Grid>
                    <TextBlock
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        FontFamily="{StaticResource Pretendard}"
                        FontSize="32"
                        FontWeight="Bold"
                        Foreground="White"
                        Text="{lx:Loc ExchangeSellProcess.Withdraw}" />
                </StackPanel>
            </StackPanel>
        </Grid>

        <!--  구분선  -->
        <Rectangle
            Height="0.6"
            Margin="72,0,72,0"
            HorizontalAlignment="Stretch"
            VerticalAlignment="Bottom"
            Stroke="#DCDEE0" />

        <!--  타이틀  -->
        <TextBlock
            Grid.Row="2"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            FontFamily="{StaticResource Pretendard}"
            FontSize="{StaticResource FontSize_XL}"
            FontWeight="{StaticResource FontWeight_S}"
            Foreground="White"
            Text="{lx:Loc Scan.Title}" />

        <!--  내용  -->
        <Border
            Grid.Row="4"
            Width="1780"
            Height="580"
            VerticalAlignment="Top"
            Background="White"
            CornerRadius="20">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1*" />
                    <ColumnDefinition Width="1*" />
                </Grid.ColumnDefinitions>
                <!--  좌측  -->
                <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                    <TextBlock
                        HorizontalAlignment="Center"
                        FontFamily="{StaticResource Pretendard}"
                        FontSize="{StaticResource FontSize_M}"
                        FontWeight="{StaticResource FontWeight_L}"
                        Foreground="{StaticResource SecondaryBrush}"
                        Text="PASSPORT" />
                    <Separator Height="36" Background="Transparent" />
                    <Image
                        Width="539"
                        Height="290"
                        Source="/Assets/Image/IDScan_Passport.png" />
                    <TextBlock
                        Width="539"
                        HorizontalAlignment="Center"
                        FontFamily="{StaticResource Pretendard}"
                        FontSize="{StaticResource FontSize_S}"
                        FontWeight="{StaticResource FontWeight_M}"
                        Text="{lx:Loc Scan.Passport}"
                        TextAlignment="Center"
                        TextWrapping="Wrap" />
                </StackPanel>
                <!--  우측  -->
                <StackPanel Grid.Column="1" VerticalAlignment="Center">
                    <TextBlock
                        HorizontalAlignment="Center"
                        FontFamily="{StaticResource Pretendard}"
                        FontSize="{StaticResource FontSize_M}"
                        FontWeight="{StaticResource FontWeight_L}"
                        Foreground="{StaticResource SecondaryBrush}"
                        Text="ID Card" />
                    <Separator Height="36" Background="Transparent" />
                    <Image
                        Width="539"
                        Height="290"
                        Source="/Assets/Image/IDScan_ID.png" />
                    <TextBlock
                        Width="500"
                        HorizontalAlignment="Center"
                        FontFamily="{StaticResource Pretendard}"
                        FontSize="{StaticResource FontSize_S}"
                        FontWeight="{StaticResource FontWeight_M}"
                        Text="{lx:Loc Scan.ID}"
                        TextAlignment="Center"
                        TextWrapping="Wrap" />
                </StackPanel>
            </Grid>
        </Border>
        <StackPanel
            HorizontalAlignment="Right"
            VerticalAlignment="Bottom"
            Orientation="Horizontal"
            Visibility="{DynamicResource IsDebugVisibility}">
            <Button
                Width="100"
                Height="40"
                Command="{Binding NextCommand}"
                CommandParameter="1" />
            <Button
                Width="100"
                Height="40"
                Command="{Binding NextCommand}"
                CommandParameter="2" />
        </StackPanel>
    </Grid>
</UserControl>
