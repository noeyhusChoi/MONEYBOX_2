<Window
    x:Class="KIOSK.Views.Exchange.Popup.PopupWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:view="clr-namespace:KIOSK.Views.Exchange.Popup"
    xmlns:vm="clr-namespace:KIOSK.ViewModels.Exchange.Popup"
    Width="{Binding Owner.ActualWidth, RelativeSource={RelativeSource Self}}"
    Height="{Binding Owner.ActualHeight, RelativeSource={RelativeSource Self}}"
    AllowsTransparency="True"
    Background="Transparent"
    ResizeMode="NoResize"
    ShowInTaskbar="False"
    SizeToContent="Manual"
    WindowStyle="None">
    <Window.Resources>
        <DataTemplate DataType="{x:Type vm:ConfirmDialogViewModel}">
            <view:ConfirmDialogView />
        </DataTemplate>
    </Window.Resources>

    <Grid>
        <Border Background="#80000000" />

        <Border
            Width="1540"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Background="White"
            CornerRadius="8">
            <!--  안전한 방식: 명시적으로 DropShadowEffect 사용  -->
            <Border.Effect>
                <DropShadowEffect
                    BlurRadius="16"
                    Opacity="0.35"
                    ShadowDepth="6" />
            </Border.Effect>

            <ContentPresenter Content="{Binding}" />
        </Border>
    </Grid>
</Window>
