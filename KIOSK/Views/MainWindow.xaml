<Window x:Class="KIOSK.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:KIOSK"
        xmlns:views="clr-namespace:KIOSK.Views"
        xmlns:viewModels="clr-namespace:KIOSK.ViewModels"
        mc:Ignorable="d"
        d:DataContext="{d:DesignInstance Type=viewModels:MainViewModel, IsDesignTimeCreatable=True}"
        Title="MainWindow" Height="1080" Width="1920">
    
    <Window.Resources>
        <DataTemplate DataType="{x:Type viewModels:HomeViewModel}">
            <views:HomeView />
        </DataTemplate>
        <DataTemplate DataType="{x:Type viewModels:TestViewModel}">
            <views:TestView />
        </DataTemplate>
    </Window.Resources>

    <Grid>
        <!-- 중앙 콘텐츠 영역 -->
        <ContentControl x:Name="MainContent"
                        Content="{Binding CurrentViewModel}"
                        Background="#2222F0" 
                        Margin="0,0,0,100"/>


        <!-- 하단 바 (QR + 정보), Frame 위로 표시 -->
        <Grid VerticalAlignment="Bottom"
              Height="100"
              Background="#170C37"
              DataContext="{Binding FooterViewModel}"
              d:DataContext="{d:DesignInstance Type=viewModels:FooterViewModel}"
              Panel.ZIndex="10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- QR 이미지 -->
            <Border Width="100" Height="100"
                    Background="White"
                    BorderBrush="Black"
                    BorderThickness="1"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"
                    Margin="50,-30,20,0"
                    Grid.Column="0">
                <Image Source="../Assets/Branch_QR.png"
                       Width="80" Height="80"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"/>
            </Border>

            <!-- 아이콘 + 지점명 영역 -->
            <StackPanel Orientation="Horizontal"
                        VerticalAlignment="Center"
                        Grid.Column="1"
                        Margin="0,-10,30,0">
                <Image Source="../Assets/Vector.png"
                       Width="38" Height="44"
                       Margin="0,0,10,0"/>
                <TextBlock Text="{Binding BranchName}"
                           Foreground="White"
                           FontSize="30"
                           FontFamily="Noto Sans KR"
                           FontWeight="Bold"
                           VerticalAlignment="Bottom"/>
            </StackPanel>
            
            <StackPanel Orientation="Horizontal"
                        VerticalAlignment="Center"
                        HorizontalAlignment="Right"
                        Grid.Column="2"
                        Margin="0,-10,30,0">
                <TextBlock Text="{Binding Date}"
                           Foreground="White"
                           FontSize="21"
                           FontFamily="Noto Sans KR"
                           FontWeight="Medium"
                           VerticalAlignment="Center"
                           Margin="0,0,10,0"/>
                <TextBlock Text="{Binding Time}"
                           Foreground="White"
                           FontSize="31"
                           FontFamily="Noto Sans KR"
                           FontWeight="Medium"
                           VerticalAlignment="Bottom"/>
            </StackPanel>
        </Grid>
    </Grid>
</Window>
