<UserControl
    x:Class="KIOSK.Views.ServiceView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:KIOSK.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="980"
    d:DesignWidth="1920"
    mc:Ignorable="d">

    <UserControl.Resources>
        <!--  재사용 가능한 이미지 버튼 스타일  -->
        <Style x:Key="ImageButtonStyle" TargetType="Button">
            <!--  기본 속성: 테두리 없애기, 패딩 0  -->
            <Setter Property="Margin" Value="0" />
            <Setter Property="Padding" Value="0" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="Foreground" Value="White" />
            <Setter Property="Cursor" Value="Hand" />
            <Setter Property="Focusable" Value="True" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <!--  외부 Border: Background는 Button.Background로부터 온다  -->
                        <Border
                            x:Name="PART_Border"
                            Width="{TemplateBinding Width}"
                            Height="{TemplateBinding Height}"
                            Background="{TemplateBinding Background}"
                            CornerRadius="0"
                            Cursor="{TemplateBinding Cursor}"
                            SnapsToDevicePixels="True">
                            <!--  내용(문자열이면 내부적으로 TextBlock이 생성되어 Font 속성 상속)  -->
                            <ContentPresenter
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                Content="{TemplateBinding Content}"
                                ContentTemplate="{TemplateBinding ContentTemplate}"
                                RecognizesAccessKey="True" />
                        </Border>

                        <!--  간단한 시각적 트리거(Pressed 등)  -->
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="PART_Border" Property="Opacity" Value="0.85" />
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="PART_Border" Property="Opacity" Value="0.6" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>

    <Grid Background="{StaticResource SecondaryBrush}">

        <!--  MediaElement: WPF 기본 영상 재생 컨트롤  -->
        <!--<MediaElement
            x:Name="Media"
            LoadedBehavior="Play"
            MediaEnded="MediaElement_MediaEnded"
            Source="{Binding Source}"
            Stretch="Fill"
            UnloadedBehavior="Stop" />-->

        <StackPanel
            HorizontalAlignment="Center"
            VerticalAlignment="Top"
            Orientation="Horizontal">
            <Button
                Width="100"
                Height="50"
                Command="{Binding GoCommand}"
                Content="GO" />
            <Button
                Width="100"
                Height="50"
                Command="{Binding ApiTestCommand}"
                Content="API" />
            <Button
                Width="100"
                Height="50"
                Command="{Binding LoadingCommand}"
                Content="Loading" />
        </StackPanel>


        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">

            <TextBlock
                Margin="0,0,0,66"
                HorizontalAlignment="Center"
                FontFamily="{StaticResource Pretendard}"
                FontSize="{StaticResource FontSize_4XL}"
                FontWeight="{StaticResource FontWeight_L}"
                Foreground="{StaticResource WhiteBrush}"
                Text="원하시는 서비스를 선택해 주세요." />
            <UniformGrid Columns="2">
                <Button
                    Width="770"
                    Height="280"
                    Margin="0,0,0,0"
                    Background="{StaticResource PointBrush}"
                    Command="{Binding NextCommand}"
                    CommandParameter="{Binding Tag, RelativeSource={RelativeSource Self}}"
                    Tag="1">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border
                                Padding="74,74,24,14"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="30">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="Auto" />
                                    </Grid.ColumnDefinitions>
                                    <StackPanel Grid.Column="0" VerticalAlignment="Top">
                                        <TextBlock
                                            FontFamily="{StaticResource Pretendard}"
                                            FontSize="{StaticResource FontSize_4XL}"
                                            FontWeight="{StaticResource FontWeight_L}"
                                            Foreground="{StaticResource SecondaryBrush}"
                                            Text="외화판매" />
                                        <TextBlock
                                            FontFamily="{StaticResource Pretendard}"
                                            FontSize="{StaticResource FontSize_L}"
                                            FontWeight="{StaticResource FontWeight_S}"
                                            Foreground="{StaticResource SecondaryBrush}"
                                            Opacity="0.7"
                                            Text="외화를 원화로 바꾸기" />
                                    </StackPanel>
                                    <Image
                                        Grid.Column="1"
                                        Width="300"
                                        Height="240"
                                        Margin="50,0,0,0"
                                        VerticalAlignment="Bottom"
                                        Source="/Assets/Image/exchange_sell.png"
                                        Stretch="Uniform" />
                                </Grid>
                            </Border>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
                <Button
                    Width="770"
                    Height="280"
                    Margin="10,0,0,0"
                    Background="{StaticResource PrimaryBrush}">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border
                                Padding="74,74,44,44"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="30">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="Auto" />
                                    </Grid.ColumnDefinitions>
                                    <StackPanel Grid.Column="0" VerticalAlignment="Top">
                                        <TextBlock
                                            FontFamily="{StaticResource Pretendard}"
                                            FontSize="{StaticResource FontSize_4XL}"
                                            FontWeight="{StaticResource FontWeight_L}"
                                            Foreground="{StaticResource WhiteBrush}"
                                            Text="외화구입" />
                                        <TextBlock
                                            FontFamily="{StaticResource Pretendard}"
                                            FontSize="{StaticResource FontSize_L}"
                                            FontWeight="{StaticResource FontWeight_S}"
                                            Foreground="{StaticResource WhiteBrush}"
                                            Opacity="0.7"
                                            Text="원화를 외화로 바꾸기" />
                                    </StackPanel>
                                    <Image
                                        Grid.Column="1"
                                        Width="300"
                                        Height="240"
                                        Margin="50,0,0,0"
                                        VerticalAlignment="Bottom"
                                        Source="/Assets/Image/exchange_buy.png"
                                        Stretch="Uniform" />
                                </Grid>
                            </Border>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
                <Button
                    Width="770"
                    Height="280"
                    Margin="0,10,0,0"
                    Background="{StaticResource PrimaryBrush}">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border
                                Padding="74,74,44,44"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="30">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="Auto" />
                                    </Grid.ColumnDefinitions>
                                    <StackPanel Grid.Column="0" VerticalAlignment="Top">
                                        <TextBlock
                                            FontFamily="{StaticResource Pretendard}"
                                            FontSize="{StaticResource FontSize_4XL}"
                                            FontWeight="{StaticResource FontWeight_L}"
                                            Foreground="{StaticResource WhiteBrush}"
                                            Text="세금환급" />
                                        <TextBlock
                                            FontFamily="{StaticResource Pretendard}"
                                            FontSize="{StaticResource FontSize_L}"
                                            FontWeight="{StaticResource FontWeight_S}"
                                            Foreground="{StaticResource WhiteBrush}"
                                            Opacity="0.7"
                                            Text="Global Tax Free" />
                                    </StackPanel>
                                    <Image
                                        Grid.Column="1"
                                        Width="300"
                                        Height="240"
                                        Margin="50,0,0,0"
                                        VerticalAlignment="Bottom"
                                        Source="/Assets/Image/exchange_buy.png"
                                        Stretch="Uniform" />
                                </Grid>
                            </Border>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
            </UniformGrid>
        </StackPanel>

    </Grid>
</UserControl>
